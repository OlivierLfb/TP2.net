@using TPLOCAL1.Models
@model TPLOCAL1.Models.FormulaireComplet

<!DOCTYPE html>
<html>

<head>
    <title>HN - TP LOCAL</title>
    <link rel="stylesheet" href="~/ressources/Formulaire.css" />
</head>
<body>
    <header>
        <img src="~/ressources/GroupeHN.png" class="image" alt="GroupeHN" />
        <h1>Formulaire de Validation</h1>
    </header>

    <nav>
        <ul>
            <li><a href="/Home/Index">Accueil</a></li>
            <li><a href="/Home/Index/ListeAvis">Liste avis</a></li>
        </ul>
    </nav>


    @using (Html.BeginForm("ValidationFormulaire", "Home", FormMethod.Post))
    {
        <table class="center">
            <caption>
                Informations Personnelles
            </caption>
            <tr>
                <td>Nom</td>
                <td>
                    @Html.TextBoxFor(model => model.nom)
                    @Html.ValidationMessageFor(model => model.nom)
                </td>
            </tr>
            <tr>
                <td>Prenom</td>
                <td>
                    @Html.TextBoxFor(model => model.prenom)
                    @Html.ValidationMessageFor(model => model.prenom)
                </td>
            </tr>
            <tr>
                <td>Sexe</td>
                <td>
                    @Html.DropDownListFor(model => model.sexe, new SelectList(Enum.GetValues(typeof(Sexe))), "Selectionner un sexe")
                </td>
            </tr>
            <tr>
                <td>Adresse</td>
                <td>
                    @Html.TextBoxFor(model => model.adresse)
                    @Html.ValidationMessageFor(model => model.adresse)
                </td>
            </tr>
            <tr>
                <td>Code Postal</td>
                <td>
                    @Html.TextBoxFor(model => model.codePostal)
                    @Html.ValidationMessageFor(model => model.codePostal)
                </td>
            </tr>
            <tr>
                <td>Ville</td>
                <td>
                    @Html.TextBoxFor(model => model.ville)
                    @Html.ValidationMessageFor(model => model.ville)
                </td>
            </tr>
            <tr>
                <td>Adresse Mail</td>
                <td>
                    @Html.TextBoxFor(model => model.email)
                    @Html.ValidationMessageFor(model => model.email)
                </td>
            </tr>
        </table>

        <table>
            <caption>
                Information formation suivie
            </caption>
            <tr>
                <td>Date début formation</td>
                <td>

                    @Html.TextBoxFor(model => model.debutFormation)
                    @Html.ValidationMessageFor(model => model.debutFormation)
                </td>
            </tr>
            <tr>
                <td>Formation Suivie</td>
                <td>
                    @{
                        List<SelectListItem> listItems = new List<SelectListItem>();
                        listItems.Add(new SelectListItem
                        {
                            Text = "Formation Cobol",
                            Value = "Formation Cobol"
                        });
                        listItems.Add(new SelectListItem
                        {
                            Text = "Formation C#",
                            Value = "Formation C#",
                        });
                        listItems.Add(new SelectListItem
                        {
                            Text = "Formation Double Compétences",
                            Value = "Formation Double Compétences"
                        });
                    }

                    @Html.DropDownListFor(model => model.formationSuivie, listItems, "Selectionner une formation")
                </td>


            </tr>
        </table>
        <table>
            <caption>
                Avis sur la formation
            </caption>
            <tr>
                <td>Formation Cobol</td>
                <td>
                    @Html.TextBoxFor(model => model.avisCobol)
                    @Html.ValidationMessageFor(model => model.avisCobol)
                </td>
            </tr>
            <tr>
                <td>Formation C#</td>
                <td>
                    @Html.TextBoxFor(model => model.avisCSharp)
                    @Html.ValidationMessageFor(model => model.avisCSharp)
                </td>


            </tr>
        </table>
        <button type="submit">Soumettre </button>
    }


</body>
</html>