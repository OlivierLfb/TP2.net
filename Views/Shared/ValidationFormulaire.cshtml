@{
    ViewBag.Title = "ValidationFormulaire";
}
@using TPLOCAL1.Models
@model TPLOCAL1.Models.FormulaireComplet


<!DOCTYPE html>
<html>

<head>
    <title>HN - TP LOCAL</title>
    <link rel="stylesheet" href="~/ressources/ValidationFormulaire.css" />
</head>
<body>
    <header>
        <img src="~/ressources/GroupeHN.png" class="image" alt="GroupeHN" />
        <h1>Page de Validation</h1>
    </header>


    <nav>
        <ul>
            <li><a href="/Home/Index">Accueil</a></li>
            <li><a href="/Home/Index/ListeAvis">Liste avis</a></li>
        </ul>
    </nav>
    <p>Formulaire bien pris en compte</p>




    <table>
        <caption>
            Informations Personnelles
        </caption>
        <tr>
            <td>Nom</td>
            <td>
                @Model.nom
            </td>
        </tr>
        <tr>
            <td>Prenom</td>
            <td>
                @Model.prenom
            </td>
        </tr>
        <tr>
            <td>Sexe</td>
            <td>
                @Model.sexe
            </td>
        </tr>
        <tr>
            <td>Adresse</td>
            <td>
                @Model.adresse
            </td>
        </tr>
        <tr>
            <td>Code Postal</td>
            <td>
                @Model.codePostal
            </td>
        </tr>
        <tr>
            <td>Ville</td>
            <td>
                @Model.ville
            </td>
        </tr>
        <tr>
            <td>Adresse Mail</td>
            <td>
                @Model.email
            </td>
        </tr>
    </table>


    <table>
        <caption>
            Information formation suivie
        </caption>
        <tr>
            <td>Date début formation</td>
            <td>
                @Model.debutFormation.ToString("dd-MM-yyyy")
            </td>
        </tr>
        <tr>
            <td>Formation Suivie</td>
            <td>
                @Model.formationSuivie
            </td>


        </tr>
    </table>
    <table>
        <caption>
            Avis sur la formation
        </caption>
        <tr>
            <td>Formation Cobol</td>
            <td>
                @Model.avisCobol
            </td>
        </tr>
        <tr>
            <td>Formation C#</td>
            <td>
                @Model.avisCSharp
            </td>


        </tr>
    </table>
</body>
</html>