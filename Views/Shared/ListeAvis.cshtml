@model TPLOCAL1.Models.ListeAvis
@using TPLOCAL1.Models

<!DOCTYPE html>
<html>

<head>
    <title>HN - TP LOCAL</title>
    <link rel="stylesheet" href="~/ressources/ListeAvis.css" />
</head>
<body>
    <header>
        <img src="~/ressources/GroupeHN.png" class="image" alt="GroupeHN" />
        <h1>Liste des Avis</h1>
    </header>

    <nav>
        <ul>
            <li><a href="/Home/Index">Accueil</a></li>
            <li><a href="/Home/Index/Formulaire">Formulaire</a></li>
        </ul>
    </nav>
    
   
   <table>
       <caption> Table</caption>
       <tr>
           <td>
               Nom
           </td>
           <td>
               Prenom
           </td>
           <td>
               Avis
           </td>
       </tr>
       @{ 
           ListeAvis liste = new ListeAvis();
       }
       @foreach (Avis a in (liste.GetAvis(@"C:\Users\lefeb\source\repos\TPLOCAL1-base\FichierXML\DataAvis.xml")))
            {
                <tr>
                    <td>
                        @a.Nom
                    </td>
                    <td>
                        @a.Prenom
                    </td>
                    @if (a.AvisDonne == "O")
                    {
                        <td class="oui">
                            Oui
                        </td>
                    }
                     else
                      {
                        <td class="non">
                            Non
                        </td>
                      }
                    

                </tr>
            }
   </table>
</body>
</html>